# file managed by puppet
<VirtualHost *:80>
  DocumentRoot <%=scope.lookupvar("apache::params::root")%>/html
  ServerName localhost

  <Directory />
    Options FollowSymLinks
    AllowOverride None
  </Directory>

  <Directory /var/www/html/>
    Options Indexes FollowSymLinks MultiViews
    AllowOverride None
    Order allow,deny
    allow from all
  </Directory>

  ErrorLog <%= @error_log %>
  LogLevel warn
  CustomLog <%= @access_log %> combined
  ServerSignature Off
</VirtualHost>
