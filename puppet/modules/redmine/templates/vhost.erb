<VirtualHost *:80>
  ServerName <%= scope.lookupvar('redmine::site_name') %>
<% scope.lookupvar('redmine::site_aliases').each do |serveralias| -%>
  ServerAlias <%= serveralias %>
<% end -%>
  DocumentRoot <%= scope.lookupvar('redmine::local_dir') %>/public

  # RailsAutoDetect On # Not needed for Passenger4
  AddDefaultCharset UTF-8
  ServerSignature Off
  RewriteEngine on
  RewriteRule   ^/wiki(.*)  http://projects.theforeman.org/projects/foreman/wiki$1  [R,L]

</VirtualHost>
