Vagrant.configure("2") do |config|
  config.vm.box = "dummy"
  config.ssh.private_key_path = "<%= @ssh_key -%>"
  config.vm.provider :rackspace do |rs|
    rs.username = "<%= @username -%>"
    rs.api_key = "<%= @api_key -%>"
    rs.public_key_path = "<%= @ssh_key -%>.pub"
    rs.rackspace_region = :iad
  end
end
