#!/bin/bash
# Add the right theforeman.org repositories

set -eu

echo deb http://deb.theforeman.org/ <%= @release %> ${FOREMAN_VERSION} > /etc/apt/sources.list.d/foreman.list
echo deb http://deb.theforeman.org/ plugins ${FOREMAN_VERSION} >> /etc/apt/sources.list.d/foreman.list
