#!/bin/bash

# Clean up old nightlies from freight

# This won't actually remove them, but the next time freight-cache runs
# (.e. when the next nightly is built) they will be removed from the web repo

. <%= home %>/freight.conf

# Delete all matching debs over a week old
<% if cron_matches == 'all' then -%>
find $VARLIB -mtime +6 -iname "*deb" -delete
<% else -%>
  <% cron_matches.each do |cron| -%>
find $VARLIB -mtime +6 -iname "*<%= cron %>*deb" -delete
  <% end -%>
<% end -%>
